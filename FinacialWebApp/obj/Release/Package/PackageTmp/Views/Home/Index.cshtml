
@{
	ViewBag.Title = "Dash Board";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
	.menu-item {
		display: none;
	}
</style>
<div class="container glyphicon-align-center">
	<h1>Login</h1>
	@using (Html.BeginForm("Login", "Home", new { Url = Request.Url }))
	{
		<label class="form-control">User Name: </label>
		<input name="username" class="form-control" type="text" />
		<label class="form-control">Password: </label>
		<input name="password" class="form-control" type="password" />
		<input type="submit" class="btn-success" value="Login" />
	}
	<p class="has-error">@TempData["notExistedUser"]</p>
</div>
	





