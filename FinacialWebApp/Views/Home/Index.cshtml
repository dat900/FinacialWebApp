
@{
	ViewBag.Title = "Dash Board";
}
<h1>Incomes</h1>
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#AddModal">
	Add Income
</button>

<!-- The Modal -->
<div class="modal" id="AddModal">
	<div class="modal-dialog">
		<div class="modal-content">

			<!-- Modal Header -->
			<div class="modal-header">
				<h4 class="modal-title">Modal Heading</h4>
				<button type="button" class="close" data-dismiss="modal">&times;</button>
			</div>

			<!-- Modal body -->
			<div class="modal-body">
				<form class="form-control" action=@Url.Action("AddIncome", "Income")>
					<label class="form-control">Date: </label>
					<input class="form-control" type="datetime"/>
					<label>Money(1.000đ): </label>
					<input type="number" class="form-control"/>
					<button type="submit" class="bg-success form-control">Add New</button>
					</form>
			</div>

			<!-- Modal footer -->
			<div class="modal-footer">
				<button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
			</div>

		</div>
	</div>
</div>
<canvas id="chartContainer"></canvas>
@Html.Action("IncomeByMonth", "Home")


